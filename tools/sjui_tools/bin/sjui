#!/usr/bin/env ruby
# frozen_string_literal: true

require 'optparse'
require 'pathname'

# Add lib directory to load path
lib_path = File.expand_path('../lib', File.dirname(__FILE__))
$LOAD_PATH.unshift(lib_path) unless $LOAD_PATH.include?(lib_path)

require 'cli/main'

# Run the CLI
SjuiTools::CLI::Main.new.run(ARGV)